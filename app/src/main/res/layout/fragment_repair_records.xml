<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp">

    <include layout="@layout/item_title_layout" />

    <android.support.design.widget.TabLayout
        android:id="@+id/bxjl_tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabTextColor="@color/text_color01"
        app:tabIndicatorColor="@color/green01"
        app:tabIndicatorHeight="1.5dp"
        app:tabSelectedTextColor="@color/green01"
        app:tabTextAppearance="@style/MyCustomTabTextAppearance"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/bxjl_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>